{% extends 'base.html.twig' %}

{% block title %}Hello ArticuloController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table id="articulos" class="table table-bordered">
        <thead>
        	<th>Articulo</th>
            <th>Cantidad</th>
            <th>Tipo</th>
            <th>Fecha</th>
        </thead>
        <tbody>
            {% for movimiento in movimientos %}
                <tr>
                    <td>{{ movimiento.articulo.descripcion }} </td>
                    <td>{{ movimiento.cantidad }} </td>
                    <td>{{ movimiento.tipo }} </td>
                    <td>{{ movimiento.fecha|date('Y-m-d H:i:s') }} </td>
                </tr>
            {% endfor %}
        </tbody>
          
    </table>

    <a href="{{ path('articulos') }}"> Volver a articulos </a>
</div>
{% endblock %}
