{% extends 'base.html.twig' %}

{% block title %}Listado de movimientos de un art√≠culo{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if movimientos is not empty %}
        <h3> Listado de Movimientos de {{ movimientos[0].getArticulo().getDescripcion() }} </h3>

        <table id="articulos" class="table table-bordered table-hover">
            <thead>
                <th>Cantidad</th>
                <th>Tipo</th>
                <th>Fecha</th>
            </thead>
            <tbody>
                {% for movimiento in movimientos %}
                    <tr>
                        <td>{{ movimiento.cantidad }} </td>
                        <td>{{ movimiento.tipo }} </td>
                        <td>{{ movimiento.fecha|date('Y-m-d H:i:s') }} </td>
                    </tr>
                {% endfor %}
            </tbody>
              
        </table>

    {% else %}
        <h3> No hay movimientos </h3>

    {% endif %}

    <a class="btn btn-info" href="{{ path('articulos') }}"> Volver a articulos </a>
</div>
{% endblock %}
