{% extends 'base.html.twig' %}

{% block title %}Listado de Articulos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if articulos is not empty %}
        <h3> Listado de Art√≠culos de Inventario </h3>

        <table id="articulos" class="table table-bordered table-hover">
            <thead>
                <th>Numero</th>
                <th>Descripcion</th>
                <th>Inventario</th>
                <th>Ubicacion</th>
                <th>Movimientos</th>
            </thead>
            <tbody>
                {% for articulo in articulos %}
                    <tr>
                        <td>{{ articulo.numero }} </td>
                        <td>{{ articulo.descripcion }} </td>
                        <td>{{ articulo.inventario }} </td>
                        <td>{{ articulo.ubicacion }} </td>
                        <td> <a class="btn btn-primary" href="{{ path('movimientos_articulo', {id: articulo.id}) }}"> Ver Movimientos </a></td>
                    </tr>
                {% endfor %}
            </tbody>
              
        </table>

    {% else %}
        <h3> No hay articulos. Crear uno mediante api </h3>

    {% endif %}

</div>
{% endblock %}
